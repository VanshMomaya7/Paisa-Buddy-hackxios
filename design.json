{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "name": "Fincognia Design System",
    "version": "1.0.0",
    "description": "Comprehensive design system for Fincognia - Clean, minimal, elegant design following Apple's design philosophy",
    "colors": {
        "primary": {
            "forest": {
                "value": "#1E3A2F",
                "description": "Primary brand color - Deep forest green",
                "usage": [
                    "buttons",
                    "headings",
                    "navigation",
                    "emphasis"
                ]
            },
            "forestLight": {
                "value": "#2A4D3F",
                "description": "Lighter variant of forest green",
                "usage": [
                    "hover states",
                    "secondary elements"
                ]
            }
        },
        "secondary": {
            "emerald": {
                "50": "#E6EFEA",
                "100": "#CFE3D8",
                "400": "#4ADE80",
                "500": "#10B981",
                "600": "#059669",
                "900": "#064E3B",
                "description": "Emerald accent colors for success, highlights, and interactive elements"
            }
        },
        "neutral": {
            "background": {
                "value": "#FAFAF7",
                "description": "Primary background color - Warm off-white",
                "usage": [
                    "page backgrounds",
                    "card backgrounds"
                ]
            },
            "white": {
                "value": "#FFFFFF",
                "description": "Pure white for cards and elevated surfaces"
            },
            "gray": {
                "200": "#E5E7EB",
                "300": "#D1D5DB",
                "400": "#9CA3AF",
                "500": "#6B7280",
                "description": "Gray scale for text and borders"
            }
        },
        "semantic": {
            "selection": {
                "value": "#CFE3D8",
                "description": "Text selection background color"
            },
            "success": {
                "value": "#10B981",
                "description": "Success state color"
            },
            "warning": {
                "value": "#F59E0B",
                "description": "Warning state color"
            },
            "error": {
                "value": "#EF4444",
                "description": "Error state color"
            }
        },
        "opacity": {
            "glass": {
                "light": "rgba(255, 255, 255, 0.4)",
                "medium": "rgba(255, 255, 255, 0.7)",
                "dark": "rgba(30, 58, 47, 0.9)",
                "description": "Glassmorphism backgrounds"
            },
            "overlay": {
                "10": "rgba(255, 255, 255, 0.1)",
                "20": "rgba(255, 255, 255, 0.2)",
                "30": "rgba(255, 255, 255, 0.3)",
                "description": "Overlay opacity levels"
            }
        }
    },
    "typography": {
        "fontFamily": {
            "sans": {
                "value": "-apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', Roboto, sans-serif",
                "description": "Primary font stack - Apple system fonts"
            },
            "mono": {
                "value": "'SF Mono', 'Monaco', 'Courier New', monospace",
                "description": "Monospace font for code and technical data"
            }
        },
        "fontSize": {
            "xs": {
                "value": "9px",
                "lineHeight": "1.2",
                "usage": [
                    "labels",
                    "captions",
                    "metadata"
                ]
            },
            "sm": {
                "value": "10px",
                "lineHeight": "1.3",
                "usage": [
                    "small text",
                    "badges",
                    "status indicators"
                ]
            },
            "base": {
                "value": "11px",
                "lineHeight": "1.5",
                "usage": [
                    "navigation",
                    "buttons",
                    "small headings"
                ]
            },
            "md": {
                "value": "14px",
                "lineHeight": "1.5",
                "usage": [
                    "body text",
                    "paragraphs"
                ]
            },
            "lg": {
                "value": "18px",
                "lineHeight": "1.6",
                "usage": [
                    "large body text",
                    "subheadings"
                ]
            },
            "xl": {
                "value": "20px",
                "lineHeight": "1.4",
                "usage": [
                    "section headings"
                ]
            },
            "2xl": {
                "value": "24px",
                "lineHeight": "1.3",
                "usage": [
                    "card headings"
                ]
            },
            "3xl": {
                "value": "30px",
                "lineHeight": "1.2",
                "usage": [
                    "feature headings"
                ]
            },
            "6xl": {
                "value": "60px",
                "lineHeight": "0.9",
                "usage": [
                    "hero headings mobile"
                ]
            },
            "8xl": {
                "value": "96px",
                "lineHeight": "0.85",
                "usage": [
                    "hero headings desktop"
                ]
            }
        },
        "fontWeight": {
            "light": 300,
            "normal": 400,
            "medium": 500,
            "semibold": 600,
            "bold": 700,
            "extrabold": 800,
            "black": 900
        },
        "letterSpacing": {
            "tighter": "-0.05em",
            "tight": "-0.025em",
            "normal": "0",
            "wide": "0.025em",
            "wider": "0.05em",
            "widest": "0.1em"
        }
    },
    "spacing": {
        "scale": {
            "0": "0px",
            "1": "4px",
            "2": "8px",
            "3": "12px",
            "4": "16px",
            "5": "20px",
            "6": "24px",
            "8": "32px",
            "10": "40px",
            "12": "48px",
            "16": "64px",
            "20": "80px",
            "24": "96px",
            "32": "128px"
        },
        "container": {
            "maxWidth": {
                "sm": "640px",
                "md": "768px",
                "lg": "1024px",
                "xl": "1280px",
                "2xl": "1536px",
                "5xl": "1280px",
                "6xl": "1440px",
                "7xl": "1600px"
            }
        }
    },
    "borderRadius": {
        "none": "0px",
        "sm": "4px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px",
        "2xl": "20px",
        "3xl": "24px",
        "4xl": "32px",
        "full": "9999px",
        "card": "32px",
        "button": "20px",
        "badge": "9999px"
    },
    "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
        "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
        "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
        "emerald": "0 20px 50px rgba(16, 185, 129, 0.2)",
        "emeraldDark": "0 20px 50px rgba(6, 78, 59, 0.2)"
    },
    "blur": {
        "sm": "4px",
        "md": "12px",
        "lg": "16px",
        "xl": "24px",
        "2xl": "40px",
        "3xl": "64px",
        "glow": "120px"
    },
    "animation": {
        "duration": {
            "fast": "200ms",
            "normal": "300ms",
            "slow": "500ms",
            "slower": "700ms"
        },
        "easing": {
            "linear": "linear",
            "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
            "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
            "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
        },
        "keyframes": {
            "pulse": {
                "description": "Pulsing animation for status indicators",
                "keyframes": {
                    "0%, 100%": {
                        "opacity": 1
                    },
                    "50%": {
                        "opacity": 0.5
                    }
                }
            },
            "slideUp": {
                "description": "Slide up animation for text transitions",
                "keyframes": {
                    "from": {
                        "transform": "translateY(100%)",
                        "opacity": 0
                    },
                    "to": {
                        "transform": "translateY(0)",
                        "opacity": 1
                    }
                }
            },
            "slideDown": {
                "description": "Slide down animation for text transitions",
                "keyframes": {
                    "from": {
                        "transform": "translateY(-100%)",
                        "opacity": 0
                    },
                    "to": {
                        "transform": "translateY(0)",
                        "opacity": 1
                    }
                }
            }
        }
    },
    "components": {
        "navigation": {
            "height": "56px",
            "position": "fixed",
            "top": "24px",
            "width": "90%",
            "maxWidth": "1280px",
            "background": "rgba(255, 255, 255, 0.4)",
            "backdropBlur": "24px",
            "border": "1px solid rgba(207, 227, 216, 0.3)",
            "borderRadius": "9999px",
            "padding": "0 32px",
            "zIndex": 50,
            "description": "Floating glassmorphic navigation bar"
        },
        "button": {
            "primary": {
                "background": "#1E3A2F",
                "color": "#FFFFFF",
                "padding": "16px 32px",
                "borderRadius": "20px",
                "fontSize": "14px",
                "fontWeight": 700,
                "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
                "hover": {
                    "transform": "scale(1.02)",
                    "shadow": "0 30px 60px -15px rgba(0, 0, 0, 0.3)"
                },
                "active": {
                    "transform": "scale(0.95)"
                }
            },
            "secondary": {
                "background": "#FFFFFF",
                "color": "#1E3A2F",
                "border": "1px solid #CFE3D8",
                "padding": "16px 32px",
                "borderRadius": "20px",
                "fontSize": "14px",
                "fontWeight": 700
            },
            "icon": {
                "width": "32px",
                "height": "32px",
                "background": "#1E3A2F",
                "borderRadius": "9999px",
                "color": "#FFFFFF",
                "fontSize": "10px"
            }
        },
        "card": {
            "default": {
                "background": "#FFFFFF",
                "border": "1px solid #CFE3D8",
                "borderRadius": "32px",
                "padding": "40px",
                "shadow": "none",
                "hover": {
                    "shadow": "0 20px 25px -5px rgba(6, 78, 59, 0.05)"
                }
            },
            "dark": {
                "background": "#1E3A2F",
                "color": "#FAFAF7",
                "borderRadius": "32px",
                "padding": "40px"
            },
            "glass": {
                "background": "rgba(255, 255, 255, 0.1)",
                "backdropBlur": "40px",
                "border": "1px solid rgba(255, 255, 255, 0.2)",
                "borderRadius": "20px",
                "padding": "16px",
                "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
            },
            "glassDark": {
                "background": "rgba(30, 58, 47, 0.9)",
                "backdropBlur": "64px",
                "border": "1px solid rgba(16, 185, 129, 0.3)",
                "borderRadius": "24px",
                "padding": "20px",
                "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
            }
        },
        "badge": {
            "default": {
                "background": "#E6EFEA",
                "color": "#1E3A2F",
                "border": "1px solid #CFE3D8",
                "borderRadius": "9999px",
                "padding": "6px 16px",
                "fontSize": "11px",
                "fontWeight": 700,
                "letterSpacing": "0.1em",
                "textTransform": "uppercase"
            },
            "success": {
                "background": "rgba(16, 185, 129, 0.2)",
                "color": "#10B981",
                "borderRadius": "6px",
                "padding": "2px 8px",
                "fontSize": "9px",
                "fontWeight": 700,
                "textTransform": "uppercase"
            }
        },
        "statusIndicator": {
            "width": "8px",
            "height": "8px",
            "borderRadius": "9999px",
            "background": "#10B981",
            "animation": "pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite"
        },
        "progressBar": {
            "height": "4px",
            "background": "rgba(255, 255, 255, 0.1)",
            "borderRadius": "9999px",
            "fill": {
                "background": "#10B981"
            }
        }
    },
    "layout": {
        "hero": {
            "paddingTop": "128px",
            "paddingBottom": "80px",
            "textAlign": "center",
            "maxWidth": "1600px"
        },
        "section": {
            "paddingTop": "80px",
            "paddingBottom": "80px",
            "maxWidth": "1600px"
        },
        "grid": {
            "columns": {
                "mobile": 1,
                "tablet": 2,
                "desktop": 3
            },
            "gap": "24px"
        }
    },
    "effects": {
        "glassmorphism": {
            "background": "rgba(255, 255, 255, 0.4)",
            "backdropFilter": "blur(24px)",
            "border": "1px solid rgba(207, 227, 216, 0.3)",
            "description": "Standard glassmorphic effect"
        },
        "backgroundGlow": {
            "width": "1000px",
            "height": "600px",
            "background": "rgba(236, 253, 245, 0.5)",
            "borderRadius": "9999px",
            "filter": "blur(120px)",
            "description": "Subtle background glow effect"
        },
        "textGradient": {
            "background": "linear-gradient(to right, #1E3A2F, #10B981)",
            "backgroundClip": "text",
            "textFillColor": "transparent",
            "description": "Gradient text effect"
        }
    },
    "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
    },
    "zIndex": {
        "background": -10,
        "base": 0,
        "content": 10,
        "elevated": 20,
        "overlay": 30,
        "modal": 40,
        "navigation": 50,
        "tooltip": 60
    },
    "designPrinciples": {
        "philosophy": "Clean, minimal, elegant - Following Apple's design philosophy",
        "principles": [
            "Smooth spacing and generous whitespace",
            "Subtle animations and micro-interactions",
            "Glassmorphism for depth and hierarchy",
            "Emerald green as the primary accent color",
            "Typography-first approach with clear hierarchy",
            "Consistent border radius for cohesive feel",
            "Minimal shadows, relying on borders and backgrounds"
        ],
        "accessibility": [
            "Maintain WCAG AA contrast ratios",
            "Ensure interactive elements are at least 44x44px",
            "Provide clear focus states",
            "Use semantic HTML",
            "Support keyboard navigation"
        ]
    },
    "usage": {
        "headings": {
            "h1": {
                "fontSize": "96px",
                "fontWeight": 800,
                "lineHeight": "0.9",
                "letterSpacing": "-0.025em",
                "color": "#1E3A2F"
            },
            "h2": {
                "fontSize": "60px",
                "fontWeight": 900,
                "lineHeight": "0.9",
                "letterSpacing": "-0.025em",
                "color": "#1E3A2F"
            },
            "h3": {
                "fontSize": "30px",
                "fontWeight": 700,
                "lineHeight": "1.2",
                "color": "#1E3A2F"
            },
            "h4": {
                "fontSize": "24px",
                "fontWeight": 700,
                "lineHeight": "1.3",
                "color": "#1E3A2F"
            }
        },
        "body": {
            "large": {
                "fontSize": "20px",
                "lineHeight": "1.6",
                "color": "#6B7280"
            },
            "default": {
                "fontSize": "16px",
                "lineHeight": "1.5",
                "color": "#6B7280"
            },
            "small": {
                "fontSize": "14px",
                "lineHeight": "1.5",
                "color": "#6B7280"
            }
        },
        "emphasis": {
            "primary": {
                "color": "#1E3A2F",
                "fontWeight": 600
            },
            "secondary": {
                "color": "#10B981",
                "fontWeight": 600
            },
            "italic": {
                "fontStyle": "italic",
                "fontWeight": 300,
                "color": "#D1D5DB"
            }
        }
    }
}